# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# API Keys
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Database
DYNAMODB_TABLE_PREFIX=mec_routing_
DYNAMODB_REGION=us-east-1

# Monitoring
CLOUDWATCH_NAMESPACE=MEC/InferenceRouting
ENABLE_METRICS=true

# Demo Configuration
DEMO_MODE=true
SIMULATION_SPEED=1.0
FAKE_LATENCY=true

# Cost Controls
MAX_DAILY_SPEND=10.00
BUDGET_ALERT_THRESHOLD=0.8

# Network Simulation
DEFAULT_BANDWIDTH_MBPS=50
DEFAULT_LATENCY_MS=30
NETWORK_VARIABILITY=0.2

# Model Configuration
DEVICE_MODEL_SIZE_LIMIT_MB=100
MEC_MODEL_SIZE_LIMIT_MB=5000
CLOUD_MODEL_TIMEOUT_S=10

# Security
JWT_SECRET_KEY=your_jwt_secret_here
API_RATE_LIMIT=1000
CORS_ORIGINS=http://localhost:3000,http://localhost:8501