# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Bedrock Configuration
BEDROCK_REGION=us-east-1
NOVA_MODEL_ID=amazon.nova-pro-v1:0

# Bedrock AgentCore Configuration
AGENTCORE_AGENT_ID=mec-routing-agent
AGENTCORE_AGENT_ALIAS_ID=TSTALIASID
AGENTCORE_SESSION_ID=mec-routing-session
AGENTCORE_COORDINATION_ENABLED=true

# DynamoDB Tables
ROUTING_DECISIONS_TABLE=mec-routing-decisions
RESOURCE_METRICS_TABLE=mec-resource-metrics

# API Gateway Configuration
API_GATEWAY_STAGE=prod
API_BASE_URL=https://api.example.com

# MEC Node Configuration
MEC_NODE_ENDPOINTS=https://mec1.example.com,https://mec2.example.com
MEC_HEALTH_CHECK_INTERVAL=30

# Device Tier Configuration
DEVICE_TELEMETRY_ENDPOINT=https://device-api.example.com
DEVICE_CAPABILITY_CACHE_TTL=300

# Cloud Tier Configuration
CLOUD_INFERENCE_ENDPOINT=https://bedrock.us-east-1.amazonaws.com
SAGEMAKER_ENDPOINT_NAME=mec-routing-model

# Monitoring and Logging
LOG_LEVEL=INFO
CLOUDWATCH_LOG_GROUP=/aws/lambda/mec-routing
METRICS_NAMESPACE=MEC/Routing

# Security
SECRETS_MANAGER_SECRET_NAME=mec-routing-secrets
KMS_KEY_ID=alias/mec-routing-key

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0

# Development Settings
DEBUG=false
ENVIRONMENT=development
